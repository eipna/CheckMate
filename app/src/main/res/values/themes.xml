<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CheckMate" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Custom Theme For Icons -->
        <item name="colorPrimary">@color/onyx</item>
    </style>

    <style name="Theme.CheckMate" parent="Base.Theme.CheckMate" />

    <!-- Toolbar -->
    <style name="ToolbarText">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Floating Action Button -->
    <style name="FloatingActionButton">
        <item name="android:src">@drawable/add_task</item>
        <item name="backgroundTint">@color/rose_taupe</item>
        <item name="tint">@color/mint_cream</item>
    </style>

    <!-- Buttons -->
    <style name="Buttons">
        <item name="backgroundTint">@color/onyx</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/mint_cream</item>
    </style>
    <style name="DeleteButton">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/mint_cream</item>
    </style>

    <!-- Text Input Layout -->
    <style name="TextInputLayout">
        <item name="android:theme">@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- Task item -->
    <style name="TaskItemCard">
        <item name="android:backgroundTint">@color/timber_wolf</item>
    </style>
    <style name="TaskItemDateCreatedImage">
        <item name="tint">@color/onyx</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">15dp</item>
    </style>
    <style name="TaskItemDateCreatedText">
        <item name="android:textColor">@color/onyx</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>
    <style name="TaskItemName">
        <item name="android:textColor">@color/onyx</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
    <style name="TaskItemDivider">
        <item name="dividerColor">@color/onyx</item>
        <item name="dividerThickness">2dp</item>
    </style>
    <style name="TaskItemLastEdited">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <!-- Illustration Empty -->
    <style name="IllustrationEmptyPhoto">
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_width">250dp</item>
    </style>
    <style name="IllustrationEmptyText">
        <item name="android:alpha">0.6</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
</resources>